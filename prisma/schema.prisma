datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  audits    Audit[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Audit {
  id             String    @id @default(uuid())
  url            String
  user           User?     @relation(fields: [userId], references: [id])
  userId         String?
  seoScore       Int
  issues         Json
  improvements   Json
  keywords       Json
  metaDescription String?
  blogIdeas      Json
  competitors    Json
  createdAt      DateTime  @default(now())
  reports        Report[]
  competitorsRel Competitor[]
}

model Report {
  id        String   @id @default(uuid())
  audit     Audit    @relation(fields: [auditId], references: [id])
  auditId   String
  pdfPath   String?
  createdAt DateTime @default(now())
}

model Competitor {
  id          String   @id @default(uuid())
  audit       Audit    @relation(fields: [auditId], references: [id])
  auditId     String
  url         String
  seoScore    Int
  issues      Json
  improvements Json
  createdAt   DateTime @default(now())
}
